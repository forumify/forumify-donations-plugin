{
    "name": "forumify/forumify-donations-plugin",
    "description": "Accept donations from your community",
    "type": "forumify-plugin",
    "keywords": ["symfony-ux"],
    "license": "OSL-3.0",
    "require": {
        "forumify/forumify-platform": "^1.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "squizlabs/php_codesniffer": "^3.13",
        "phpstan/phpstan-symfony": "^2.0",
        "slevomat/coding-standard": "*"
    },
    "autoload": {
        "psr-4": {
            "Forumify\\Donations\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "symfony/flex": false,
            "symfony/runtime": false,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "extra": {
        "forumify-plugin-class": "Forumify\\Donations\\ForumifyDonationsPlugin"
    }
}
